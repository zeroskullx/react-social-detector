# Basic commit message validation
# Ensures commit messages are not empty and have a minimum length
commit_regex='^.{10,}$'

if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message!"
    echo "ğŸ’¡ Commit message should be at least 10 characters long"
    echo "ğŸ’¡ Consider using conventional commits: feat:, fix:, docs:, etc."
    echo ""
    echo "Examples:"
    echo "  feat: add new social network detection for TikTok"
    echo "  fix: resolve URL validation issue with special characters"
    echo "  docs: update README with new usage examples"
    echo ""
    exit 1
fi

echo "âœ… Commit message looks good!"
